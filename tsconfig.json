{
  "include": [
    "./build/*",
    "./typechain-types/*",
    "./typechain-types/factories/*",
    "./scripts",
    "./test"
  ],
  "exclude": [
    "./.github/*",
    "./.vscode/*",
    "./.yarn/*",
    "./contracts/*",
    "./flatten/*",
    "./scripts/*",
  ],
  "files": ["./hardhat.config.ts"],
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "baseUrl": ".",
    "paths": {
      "@/*" : [
        "./*",
      ],
    },
    "lib": [
      "ESNext",
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
  },
}
